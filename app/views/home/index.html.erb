<div class="content">
	<div class="home_left_column">
		<div class="welcome-message">

			<h2><%= raw t('welcome_title')%></h2>
			<%= raw t('welcome_text')%>
			<div class="screencast_home_page">
				<p><%= t('screencast_text') %></p>
				<div class="clear"></div>
                <div id="tutorials" class="tutorials">
                    <div class="item"><%= link_to image_tag("doranum-scene.png"), "#", :data => { :colorbox => true, :colorbox_inline => true, :colorbox_href => "#first-video", :colorbox_width => "70%", :colorbox_height => "auto" } %></div>
                    <div class="item"><%= link_to image_tag("1ere-scene.png"), "#", :data => { :colorbox => true, :colorbox_inline => true, :colorbox_href => "#second-video", :colorbox_width => "80%", :colorbox_height => "auto" } %></div>
										<div class="item"><%= link_to image_tag("2eme-scene.png"), "#", :data => { :colorbox => true, :colorbox_inline => true, :colorbox_href => "#third-video", :colorbox_width => "80%", :colorbox_height => "auto" } %></div>
										<div class="item"><%= link_to image_tag("3eme-scene.png"), "#", :data => { :colorbox => true, :colorbox_inline => true, :colorbox_href => "#fourth-video", :colorbox_width => "80%", :colorbox_height => "auto" } %></div>
								</div>
                <div style='display:none'>
                    <div id="first-video">
                        <video preload="metadata" controls="controls" class="video" width="100%" height="auto"  title="1662" poster="<%= asset_path('doranum-scene.png')%>">
                            <source src="http://doranum.fr/wp-content/uploads/DMP-Outil.mp4" type="video/mp4" />
                        </video>
												<%= link_to "DoRANum", "http://doranum.fr/outil-redaction-dmp-plan-gestion-donnees-dmp/", :target => "_blank"  %> / CC BY-NC-SA 2.0 FR
                    </div>
                </div>
                <div style='display:none'>
                    <div id="second-video">
                        <video preload="metadata" controls="controls" class="video" width="100%" height="auto"  title="1662">
                            <source src="<%= asset_path('index.files/html5video/1ere-scene.mp4')%>" type="video/mp4" />
                            <source src="<%= asset_path('index.files/html5video/1ere-scene.webm')%>" type="video/webm" />
                            <object type="application/x-shockwave-flash" data="<%= asset_path('index.files/html5video/flashfox.swf')%>" width="100%" height="200" style="position:relative;">
                                <param name="movie" value="<%= asset_path('index.files/html5video/flashfox.swf')%>" />
                                <param name="allowFullScreen" value="true" />
                                <param name="flashVars" value="autoplay=true&amp;controls=true&amp;fullScreenEnabled=true&amp;posterOnEnd=true&amp;loop=false&amp;poster=<%= asset_path('1ere-scene.png')%>&amp;src=<%= asset_path('index.files/html5video/1ere-scene.mp4')%>" />
                                <embed src="<%= asset_path('index.files/html5video/flashfox.swf')%>" width="100%" height="200" style="position:relative;"  flashVars="autoplay=true&amp;controls=true&amp;fullScreenEnabled=true&amp;posterOnEnd=true&amp;loop=false&amp;poster=<%= asset_path('1ere-scene.png')%>&amp;src=<%= asset_path('index.files/html5video/1ere-scene.mp4')%>"	allowFullScreen="true" wmode="transparent" type="application/x-shockwave-flash" pluginspage="http://www.adobe.com/go/getflashplayer_en" />
                                <img alt="screencast" src="<%= asset_path('1ere-scene.png')%>" style="position:absolute;left:0;" width="100%" title="<%= t('screencast_error_text')%>" />
                            </object>
                        </video>
                    </div>
                </div>
                <div style='display:none'>
                    <div id="third-video">
                        <video preload="metadata"  controls="controls" class="video" width="100%" height="auto"  title="1662">
                            <source src="<%= asset_path('index.files/html5video/2eme-scene.mp4')%>" type="video/mp4" />
                            <source src="<%= asset_path('index.files/html5video/2eme-scene.webm')%>" type="video/webm" />
                            <object type="application/x-shockwave-flash" data="<%= asset_path('index.files/html5video/flashfox.swf')%>" width="100%" height="200" style="position:relative;">
                                <param name="movie" value="<%= asset_path('index.files/html5video/flashfox.swf')%>" />
                                <param name="allowFullScreen" value="true" />
                                <param name="flashVars" value="autoplay=true&amp;controls=true&amp;fullScreenEnabled=true&amp;posterOnEnd=true&amp;loop=false&amp;poster=<%= asset_path('2eme-scene.png')%>&amp;src=<%= asset_path('index.files/html5video/2eme-scene.mp4')%>" />
                                <embed src="<%= asset_path('index.files/html5video/flashfox.swf')%>" width="100%" height="200" style="position:relative;"  flashVars="autoplay=true&amp;controls=true&amp;fullScreenEnabled=true&amp;posterOnEnd=true&amp;loop=false&amp;poster=<%= asset_path('2eme-scene.png')%>&amp;src=<%= asset_path('index.files/html5video/2eme-scene.mp4')%>"	allowFullScreen="true" wmode="transparent" type="application/x-shockwave-flash" pluginspage="http://www.adobe.com/go/getflashplayer_en" />
                                <img alt="screencast" src="<%= asset_path('2eme-scene.png')%>" style="position:absolute;left:0;" width="100%" title="<%= t('screencast_error_text')%>" />
                            </object>
                        </video>
                    </div>
                </div>
                <div style='display:none'>
                    <div id="fourth-video">
                        <video preload="metadata"  controls="controls" class="video" width="100%" height="auto"  title="1662">
                            <source src="<%= asset_path('index.files/html5video/3eme-scene.mp4')%>" type="video/mp4" />
                            <source src="<%= asset_path('index.files/html5video/3eme-scene.webm')%>" type="video/webm" />
                            <object type="application/x-shockwave-flash" data="<%= asset_path('index.files/html5video/flashfox.swf')%>" width="100%" height="200" style="position:relative;">
                                <param name="movie" value="<%= asset_path('index.files/html5video/flashfox.swf')%>" />
                                <param name="allowFullScreen" value="true" />
                                <param name="flashVars" value="autoplay=true&amp;controls=true&amp;fullScreenEnabled=true&amp;posterOnEnd=true&amp;loop=false&amp;poster=<%= asset_path('3eme-scene.png')%>&amp;src=<%= asset_path('index.files/html5video/3eme-scene.mp4')%>" />
                                <embed src="<%= asset_path('index.files/html5video/flashfox.swf')%>" width="100%" height="200" style="position:relative;"  flashVars="autoplay=true&amp;controls=true&amp;fullScreenEnabled=true&amp;posterOnEnd=true&amp;loop=false&amp;poster=<%= asset_path('3eme-scene.png')%>&amp;src=<%= asset_path('index.files/html5video/3eme-scene.mp4')%>"	allowFullScreen="true" wmode="transparent" type="application/x-shockwave-flash" pluginspage="http://www.adobe.com/go/getflashplayer_en" />
                                <img alt="screencast" src="<%= asset_path('3eme-scene.png')%>" style="position:absolute;left:0;" width="100%" title="<%= t('screencast_error_text')%>" />
                            </object>
                        </video>
                    </div>
                </div>
			</div>
		</div>
	</div>
	<div class="home_right_column">
		<div class="accordion" id="homepage-accordion">
			<div class="accordion-group">
				<div class="accordion-heading">
					<a class="accordion-toggle" data-toggle="collapse" data-parent="#homepage-accordion" href="#collapse-login">
						<%= t('helpers.sign_in')%><span class="minus-laranja"> </span></a>
				</div>
				<div id="collapse-login" class="accordion-home collapse in">
					<div class="accordion-inner">

                        <% if Rails.application.config.shibboleth_enabled %>
                        <h2><%= t('helpers.institution_sign_in')%></h2>
                        <ul>
                            <li>
                                <%= link_to user_omniauth_shibboleth_path, :id => "institution_login", :class => "btn btn-primary" do %>
                                    <i class="icon-large icon-link icon-white"></i>
                                    <%= t('helpers.institution_sign_in_link') %>
                                <% end %>
                            </li>
                        </ul>

                        <hr/>
                        <h3><%= t('helpers.classic_sign_in')%></h2>

                        <% end %>

						<%= render :partial => 'shared/login_form' %>
					</div>
				</div>
			</div>
			<div class="accordion-group">
				<div class="accordion-heading">
					<a class="accordion-toggle" data-toggle="collapse" data-parent="#homepage-accordion" href="#collapse-register">
						<%= t('helpers.sign_up') %><span class="plus-laranja"> </span></a>
					<p>
						<%= raw t('helpers.sign_up_text')%>
					</p>

				</div>
				<div id="collapse-register" class="accordion-home collapse">
					<div class="accordion-inner">
						<%= render :partial => 'shared/register_form', locals: {extended: false} %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="two-column-clear"></div>
</div>
